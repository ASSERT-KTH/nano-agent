Bootstrap: docker
From: whatcanyousee/verl:ngc-cu124-vllm0.8.5-sglang0.4.6.post5-mcore0.12.1-te2.3-deepseekv3

%files
    ../nano /workspace/nano
    ../setup.py /workspace/setup.py

%post
    apt-get update
    apt-get install -y --no-install-recommends git ripgrep ca-certificates  # Nano needs git and ripgrep, WandB needs ca-certificates
    
    cd /workspace
    pip install -e .  # install Nano with GitPython dependency
    

